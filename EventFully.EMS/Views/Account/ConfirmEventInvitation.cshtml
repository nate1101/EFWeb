@model EventFully.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventBx</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    </environment>



</head>
<body class="white-bg">

    <div class="middle-box animated fadeInDown">
        <div class="row white-bg p-2">
            <div class="col-md-12">
                <div class="ibox-content text-center">
                    @if (!String.IsNullOrEmpty(ViewData["AcceptedMessage"]?.ToString()))
                    {
                        <p class="text-center mt-4">
                            Your invitation has already been accepted Please login to view and manage your event.
                        </p>
                    }
                    else if (!String.IsNullOrEmpty(ViewData["ExpirationMessage"]?.ToString()))
                    {
                        <h2 class="font-bold">Invitation Expired!</h2>
                        <p class="text-center mt-4 text-danger">
                            Your invitation has expired and will need to be resent. Please contact the event administrator.
                        </p>
                    }
                    else
                    {
                        <h2 class="font-bold">Invitation Accepted!</h2>
                        <p class="text-center mt-4">
                            Log in to begin managing your event.
                            <a href="/Account/Login" class="btn btn-success btn-block mt-4">
                                Return to Login
                            </a>
                        </p>
                    }
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <strong>&copy; @DateTime.Now.Year EventBx</strong> | <a href="https://www.eventbx.com/cookies" target="_blank">Cookie Policy</a> | <a href="https://www.eventbx.com/privacy" target="_blank">Privacy Policy</a> | <a href="https://www.eventbx.com/terms" target="_blank">Terms of Service</a>
            </div>
        </div>
    </div>

</body>

</html>
