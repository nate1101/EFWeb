@model EventFully.EMS.Models.EventViewModel
@{
    ViewData["Title"] = "Order History";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-8">
        <h2>Order History</h2>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>View Orders</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover" id="orders">
                        <thead>
                            <tr>
                                <th>Order#</th>
                                <th>Order Date</th>
                                <th>Event</th>
                                <th>Order Items</th>
                                <th>Order Total</th>
                                <th>Status</th>
                                <th>Invoice</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>
@section Styles {
    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
    </environment>
}

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib/dataTables/datatables.min.js"></script>
        <script src="~/lib/dataTables/dataTables.bootstrap4.min.js"></script>
    </environment>

    <script type="text/javascript">
        var sTable;
        $(document).ready(function () {
        
            sTable = $('#orders').DataTable({
                pageLength: 25,
                processing: true,
                serverSide: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'Orders' },
                    { extend: 'pdf', title: 'Orders' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ],
                ajax: {
                    "type": "POST",
                    "url": '/Account/GetOrderSummary',
                },
                columns: [
                    {
                        data: "id",
                        name: "id",
                        sortable: false,
                        searchable: false,
                        visible: true
                    },
                    {
                        data: "orderDate",
                        name: "orderDate",
                        sortable: true,
                        searchable: false,
                        visible: true
                    },
                    {
                        data: "eventName",
                        name: "eventName",
                        sortable: true,
                        searchable: true,
                        visible: true
                    },
                    {
                        data: "orderItems",
                        name: "orderItems",
                        sortable: true,
                        searchable: true,
                        visible: true
                    },
                    {
                        data: "orderTotal",
                        name: "orderTotal",
                        sortable: false,
                        searchable: false,
                        visible: true
                    },
                    {
                        data: "status",
                        name: "status",
                        sortable: false,
                        searchable: false,
                        visible: true
                    },
                    {
                        data: "id",
                        name: "actions",
                        sortable: false,
                        searchable: false,
                        className: "text-center",
                        width: 50,
                        visible: true,
                        render: function (data, type, full, meta) {
                            var cellHtml = '';
                            cellHtml += '<a href="/account/invoice/' + data + '" class="mb-sm btn btn-success"><i class="fa fa-search"></i></a>';
                            return cellHtml;
                        }
                    },
                ]
            });


        });


    </script>
}