
@{
    ViewData["Title"] = "Change Password";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Change Password</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-3">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item "><a class="nav-link" id="profile" href="@Url.Action("Profile","Account")">Profile</a></li>
                <li class="nav-item"><a class="nav-link" id="change-password" href="@Url.Action("ChangePassword","Account")">Password</a></li>
                <li class="nav-item active"><a class="nav-link" id="personal-data" href="#">Personal Data</a></li>
            </ul>
        </div>
        <div class="col-lg-6">
            <div class="col-md-6">
                <h1 class="mt-0 font-bold">Personal Data</h1>
                <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
                <p>
                    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                </p>
                <form role="form" asp-action="DownloadPersonalData" asp-controller="Account" id="download-data">
                    <button class="btn btn-primary btn-block" type="submit">Download</button>
                </form>
                <p>
                    <a id="delete" href="/Account/DeletePersonalData" class="btn btn-danger btn-block mt-2 text-white">Delete</a>
                </p>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
        <link href="~/lib/slim/slim.min.css" rel="stylesheet" />
        <link href="~/lib/sweetalert/dist/sweetalert.css" rel="stylesheet" />
        <link href="~/lib/jasny-bootstrap/dist/css/jasny-bootstrap.css" rel="stylesheet" />
    </environment>
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <script src="~/lib/jQuery-unobtrusive-ajax/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/lib/dataTables/datatables.min.js"></script>
    <script src="~/lib/dataTables/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/slim/slim.kickstart.js"></script>
    <script src="~/lib/jasny-bootstrap/dist/js/jasny-bootstrap.js"></script>

    <script type="text/javascript">
        var aTable;
        $(document).ready(function () {

        });

        function DownloadPersonalData(data) {
            if (data.success == true) {
                swal("Success", "Personal data downloaded successfully!", "success");
            }
            else {
                swal("Error", data.message, "error");
            }
        }

    </script>
}